<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <p class="lead">Editando o Usuário</p>
                <form action="/users/edit/{{userById._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" placeholder="Nome" value="{{userById.name}}"
                            class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="email" class="form-control" value="{{userById.email}}"
                            placeholder="Email" 
                        >
                    </div>
                    <div class="form-group">
                        <input type="text" name="job" class="form-control" value="{{userById.job}}"
                            placeholder="Função">
                    </div>
                    {{#if same}}
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Senha">
                        </div>
                    {{/if}}
                    <button type="submit" class="btn btn-primary btn-block">
                        Salvar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>