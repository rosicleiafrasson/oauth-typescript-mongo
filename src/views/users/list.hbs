<div class="mb-3">
    <a href="/users/create" class="btn btn-primary btn-lg ">Novo Usuário</a>
</div>
<div>
     {{#each users}}
     <div class="mb-3">
        <div class="card">
            <div class="card-body">
                <p>Nome: {{name}}</p>
                <p>Usuário: {{username}}</p>
                <p>Email: {{email}}</p>
                <p>Função: {{job}}</p>
            </div>
            <div class="card-footer">
                <a href="/users/delete/{{_id}}" class="btn btn-dark btn-sm">Delete</a>
                <a href="/users/edit/{{_id}}" class="btn btn-dark btn-sm">Edit</a>
            </div>
        </div>
    </div>
     {{/each}}
    
</div>

